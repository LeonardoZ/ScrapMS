


GET     /                                    controllers.MainController.index
GET     /signin                              controllers.Application.signin()
POST    /signup                              controllers.Application.signup
POST    /login                               controllers.Application.doLogin
GET     /logout                              controllers.Application.doLogout

POST    /subscribe                           controllers.SubscriptionsController.subscribe

GET     /mangas                              controllers.MangasController.list()
GET     /chapters                            controllers.MangasController.listChapters



# Map static resources from the /public folder to the /assets URL path
GET /assets/*file controllers.Assets.at(path="/public", file)